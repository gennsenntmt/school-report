.registration-container 
  %h2.user-information 講師登録
  = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
    = render "devise/shared/error_messages", resource: resource
    .name-field
      氏名(フルネーム)
      %br/
      = f.text_field :name, autofocus: true, autocomplete: "name", placeholder: "例）山田太郎",maxlength: 10, class: "placeholder"
    .password-field
      パスワード
      %br
      (アルファベット６文字以上)
      - if @minimum_password_length
        %em
          -# (#{@minimum_password_length} characters minimum)
      %br/
      = f.password_field :password, autocomplete: "new-password", placeholder: "例）testtest"
    .repassword-field
      パスワード確認用
      %br/
      = f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "上記と同じパスワード"
    #actions-regist
      = f.submit "登録", class:"actions-regist"

= render "devise/shared/links"
